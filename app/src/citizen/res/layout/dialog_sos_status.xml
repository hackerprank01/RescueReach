<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/text_sos_success_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/emergency_alert_sent"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/text_sos_success_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/emergency_alert_details"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:id="@+id/layout_sms_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/status_background"
        android:padding="12dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/img_sms_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_sms_sending"
            android:layout_marginEnd="12dp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/text_sms_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sending_emergency_sms"
            android:textColor="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_sos_status_ok"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@android:string/ok" />

</LinearLayout>