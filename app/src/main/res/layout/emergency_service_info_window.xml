<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/info_window_background">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="APMC Police Station" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?android:attr/textColorSecondary"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        tools:text="123 Main Street, City" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/icon_phone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_phone"
            app:tint="@color/rescue_primary"
            android:contentDescription="@string/phone" />

        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/rescue_primary"
            android:layout_marginStart="4dp"
            tools:text="+1 123-456-7890" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textStyle="italic"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="4dp"
        tools:text="2.5 km away" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tap_for_options"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textStyle="italic"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>