<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom theme attributes -->
    <attr name="gradientBackgroundStart" format="color" />
    <attr name="gradientBackgroundEnd" format="color" />
    <attr name="backgroundColor" format="color" />
    <attr name="cardBackgroundColor" format="color" />
        <!-- Attributes for FontSizeAwareTextView -->
        <declare-styleable name="FontSizeAwareTextView">
            <attr name="respectFontScaling" format="boolean" />
        </declare-styleable>

    <!-- Help & Support specific attributes -->
    <declare-styleable name="EmergencyServiceView">
        <attr name="serviceIcon" format="reference" />
        <attr name="serviceTitle" format="string" />
        <attr name="serviceNumber" format="string" />
        <attr name="is24x7" format="boolean" />
    </declare-styleable>


</resources>